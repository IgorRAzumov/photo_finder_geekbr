    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="ru.geekbrains.photofinder.activities.MainActivity">

    <Button
        android:id="@+id/bt_main_fragment_no_login_vk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_fragment_no_login_vk_button_text" />

    <Button
        android:id="@+id/bt_main_fragment_login_vk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
