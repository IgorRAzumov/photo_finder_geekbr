<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_vertical_photo_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardElevation="3dp"
    tools:cardCornerRadius="2dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_vertical_card_photo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" />


        <TextView
            android:id="@+id/tv_vertical_card_upload_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/iv_vertical_card_photo"
            android:text="@string/vertical_card_upload_date_text" />

        <TextView
            android:id="@+id/tv_vertical_card_upload_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_vertical_card_upload_date_label"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/iv_vertical_card_photo"
            android:text="@string/vertical_card_photo_date_default" />

        <ImageButton
            android:id="@+id/imbt_vertical_photo_open_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_vertical_card_photo"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/vertical_photo_card_image_button_margin_bottom"
            android:layout_marginEnd="@dimen/vertical_photo_card_image_button_margin_end"
            android:background="@drawable/vk_button_open_prof_selector"

            android:contentDescription="@string/vertical_card_button_open_profile"
            android:scaleType="fitCenter" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
